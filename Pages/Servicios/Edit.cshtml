@page
@model ParcialRostrosFelices.Pages.Servicios.EditModel
@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Servicio</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Servicio.Id" />
			<div class="form-group">
				<label asp-for="Servicio.NombreServicio" class="control-label"></label>
				<input asp-for="Servicio.NombreServicio" class="form-control" />
				<span asp-validation-for="Servicio.NombreServicio" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Servicio.Fecha" class="control-label"></label>
				<input asp-for="Servicio.Fecha" class="form-control" />
				<span asp-validation-for="Servicio.Fecha" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Servicio.NombreEmpleado" class="control-label"></label>
				<input asp-for="Servicio.NombreEmpleado" class="form-control" />
				<span asp-validation-for="Servicio.NombreEmpleado" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Servicio.Observacion" class="control-label"></label>
				<input asp-for="Servicio.Observacion" class="form-control" />
				<span asp-validation-for="Servicio.Observacion" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Servicio.ClienteId" class="control-label"></label>
				<select asp-for="Servicio.ClienteId" asp-items="Model.Clientes" class="form-control">
					<option value="">Select Cliente</option>
				</select>
			</div>

			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-success" />
				<a asp-page="./Index" class="btn btn-primary">Back to list</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

